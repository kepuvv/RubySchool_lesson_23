<!DOCTYPE html>
<html>
<head>
	<title>Table visiters</title>
</head>
<body>
	<h1>Записавшиеся</h1>
	<br>
	<table class="table table-striped">
	<thead>
		<tr>
			<th>Имя</th>
			<th>Телефон</th>
			<th>Дата и время</th>
			<th>Парикмахер</th>
			<th>Цвет</th>
		</tr>
	</thead>

	<tbody>
		<% @result.each do |row| %>
			<tr>
				<td><%= row['name'] %></td>
				<td><%= row['phone'] %></td>
				<td><%= row['datestamp'] %></td>
				<td><%= row['barber'] %></td>
				<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</body>
</html>
